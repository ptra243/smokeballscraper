<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="HeadingColour">LightGray</SolidColorBrush>
    <SolidColorBrush x:Key="TextColour">#353535</SolidColorBrush>
    <SolidColorBrush x:Key="MainBgColour" Color="#284B63" />
    <SolidColorBrush x:Key="SecondaryBgColour" Color="#D9D9D9" />
    <SolidColorBrush x:Key="TertiaryBgColour" Color="#3C6E71" />
    <Style TargetType="TextBlock" >
        <Setter Property="Padding" Value="5,5,5,5" />
    </Style>
    <Style TargetType="TextBox" >
        <Setter Property="Margin" Value="5,5,5,5" />
    </Style>
    <Style TargetType="Button" >
        <Setter Property="Padding" Value="5,5,5,5" />
        <Setter Property="Margin" Value="2,2,2,2" />
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style x:Key="Header1" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="ExtraBold" />
        <Setter Property="Background" Value="{StaticResource MainBgColour}"/>
        <Setter Property="Foreground" Value="{StaticResource HeadingColour}"/>
    </Style>


    <Style x:Key="InfoBox" TargetType="TextBlock">
        <Setter Property="Background" Value="LightYellow" />
        <Setter Property="Margin" Value="10" />
    </Style>
</ResourceDictionary>