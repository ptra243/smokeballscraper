<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="HeadingColour">#FFFFFF</Color>
    <Color x:Key="TextColour">#353535</Color>
    <SolidColorBrush x:Key="MainBgColour" Color="#284B63" />
    <SolidColorBrush x:Key="SecondaryBgColour" Color="#D9D9D9" />
    <SolidColorBrush x:Key="TertiaryBgColour" Color="#3C6E71" />
    <Style TargetType="TextBlock" >
        <Setter Property="Padding" Value="5,5,5,5" />
    </Style>
    <Style TargetType="TextBox" >
        <Setter Property="Margin" Value="5,5,5,5" />
    </Style>
    <Style TargetType="Button" >
        <Setter Property="Padding" Value="5,5,5,5" />
        <Setter Property="Margin" Value="2,2,2,2" />
    </Style>
</ResourceDictionary>